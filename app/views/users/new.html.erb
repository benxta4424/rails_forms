<%= form_with model: @user do |value| %>
    <%= value.label :username,"Your username here:" %>
    <%= value.text_field :username ,placeholder: "yourname"%>
    
    <%= value.label :text %>
    <%= value.email_field :text, placeholder: "name@gmail" %>

    <%= value.label :password %>
    <%= value.password_field :password %>

    <%= value.submit "Submit form" %>
<% end %>